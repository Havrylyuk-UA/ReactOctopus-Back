            "type": "string",
            "description": "User's name",
            "example": "Andy Machine"
          },
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          },
          "password": {
            "type": "string",
            "description": "User's password",
            "example": "qwerty123"
          }
        }
      },
        "LoginRequest": {
        "type": "object",
        "required": ["name", "email", "password"],
        "properties": {
            "name": {
            "type": "string",
            "description": "User's name",
            "example":  "Andy Machine"
          },
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          },
          "password": {
            "type": "string",
            "description": "User's password",
            "example": "qwerty123"
          }
        }
      },
      "CurrentRequest": {
        "type": "object",
        "properties": {}
      },
