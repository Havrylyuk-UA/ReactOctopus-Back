            },
            "name": {
              "type": "string",
              "description": "User's name",
              "example": "Andy Machine"
            },
            "email": {
              "type": "string",
              "description": "User's email",
              "format": "email"
            },
            "start": {
              "type": "date",
              "description": "User's token",
              "example": "2024-05-01T07:47:16.688+00:00"
            }
        }
    },
           "LogoutResponse": {
        "type": "object",
          "properties": {
            "message": {
              "type": "string",
              "description": "message",
              "example": "Logout success" 
